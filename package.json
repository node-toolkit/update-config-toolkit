{
  "name": "update-config-toolkit",
  "description": "Sharable custom [update] config to be used with toolkit projects.",
  "version": "0.1.0",
  "homepage": "https://github.com/node-toolkit/update-config-toolkit",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "node-toolkit/update-config-toolkit",
  "bugs": {
    "url": "https://github.com/node-toolkit/update-config-toolkit/issues"
  },
  "license": "MIT",
  "files": [
    ".updaterc.json"
  ],
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha"
  },
  "devDependencies": {
    "gulp-format-md": "^0.1.11"
  },
  "keywords": [
    "config",
    "fix",
    "lint",
    "linter",
    "maintain",
    "plugin",
    "plugins",
    "toolkit",
    "up-to-date",
    "update",
    "update-config",
    "update-plugin",
    "update-updater",
    "updateplugin",
    "updater"
  ],
  "verb": {
    "toc": false,
    "layout": "global",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "update",
        "updater-eslint",
        "updater-license",
        "updater-package"
      ]
    },
    "reflinks": [
      "update",
      "verb",
      "verb-generate-readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
